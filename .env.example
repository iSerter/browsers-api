# Application
NODE_ENV=development
PORT=3333
API_PREFIX=api/v1

# Database
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=automation_user
DB_PASSWORD=secure_password
DB_DATABASE=browser_automation

# Worker Configuration
WORKER_POLL_INTERVAL_MS=1000
WORKER_MAX_CONCURRENT_JOBS=10
BROWSER_POOL_MIN_SIZE=1
BROWSER_POOL_MAX_SIZE=5
BROWSER_IDLE_TIMEOUT_MS=300000

# Job Configuration
DEFAULT_JOB_TIMEOUT_MS=30000
MAX_JOB_RETRIES=3
JOB_CLEANUP_AFTER_DAYS=7

# Storage
ARTIFACT_STORAGE_TYPE=filesystem
ARTIFACT_STORAGE_PATH=./artifacts
MAX_ARTIFACT_SIZE_MB=50

# Playwright
PLAYWRIGHT_HEADLESS=true
PLAYWRIGHT_TIMEOUT_MS=30000
PLAYWRIGHT_SCREENSHOTS_DIR=./screenshots

# Security
API_KEY_HEADER=X-API-Key
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=60000

# Monitoring
ENABLE_METRICS=false
METRICS_PORT=9090
LOG_LEVEL=info
XVFB_ENABLED=true
XVFB_DISPLAY=:99

PROXY_DEFAULT=""

# Captcha Solver
ANTICAPTCHA_API_KEY=
TWOCAPTCHA_API_KEY=

# SECURITY WARNING: executeScript Action Feature Flag
# Setting this to 'true' allows jobs to execute arbitrary JavaScript code in the browser context.
# This is a powerful feature but poses significant security risks if misused.
# Only enable this feature if you:
# 1. Trust all sources that can create jobs
# 2. Have proper API authentication and authorization in place
# 3. Understand the security implications of arbitrary code execution
# 4. Have monitoring and logging enabled to track script execution
# Default: false (disabled)
ENABLE_EXECUTE_SCRIPT=true
